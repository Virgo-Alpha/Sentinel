# =============================================================================
# SENTINEL DEVELOPMENT ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to terraform.tfvars and customize for your environment
# This template provides a starting point with sensible defaults for development
# =============================================================================

# =============================================================================
# REQUIRED CONFIGURATION - MUST BE CUSTOMIZED
# =============================================================================

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Domain Configuration (for local development)
domain_name = "sentinel-dev.example.com"  # Change to your development domain

# Ownership and Billing
owner       = "development-team"    # Change to your team name
cost_center = "engineering-dev"     # Change to your cost center

# =============================================================================
# EMAIL CONFIGURATION - UPDATE WITH YOUR ACTUAL EMAIL ADDRESSES
# =============================================================================
ses_sender_email = "noreply@sentinel-dev.example.com"  # Change to your sender email

escalation_emails = [
  "dev-team@example.com",      # Change to your dev team email
  "security-dev@example.com"   # Change to your security team email
]

digest_emails = [
  "dev-team@example.com"       # Change to your digest recipients
]

alert_emails = [
  "dev-alerts@example.com",    # Change to your alert recipients
  "oncall-dev@example.com"     # Change to your on-call email
]

# =============================================================================
# AMPLIFY CONFIGURATION (OPTIONAL)
# =============================================================================
amplify_repository_url = "https://github.com/your-org/sentinel-web-app"  # Change to your repo

amplify_callback_urls = [
  "http://localhost:3000/callback",                    # Local development
  "https://dev-sentinel.example.com/callback"          # Development environment
]

amplify_logout_urls = [
  "http://localhost:3000/logout",                      # Local development  
  "https://dev-sentinel.example.com/logout"            # Development environment
]

# =============================================================================
