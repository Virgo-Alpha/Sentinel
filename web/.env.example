# AWS Configuration
REACT_APP_AWS_REGION=us-east-1
REACT_APP_USER_POOL_ID=us-east-1_XXXXXXXXX
REACT_APP_USER_POOL_WEB_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
REACT_APP_IDENTITY_POOL_ID=us-east-1:XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
REACT_APP_API_GATEWAY_URL=https://XXXXXXXXXX.execute-api.us-east-1.amazonaws.com/prod

# Application Configuration
REACT_APP_PROJECT_NAME=sentinel
REACT_APP_ENVIRONMENT=development
REACT_APP_LOG_LEVEL=debug

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_REVIEW=true
REACT_APP_ENABLE_EXPORT=true

# Authentication Configuration
# These are used by Cognito for user groups and permissions
# Admins group: Full access to all features including user management
# Analysts group: Access to review, chat, and dashboard features
REACT_APP_COGNITO_ADMIN_GROUP=Admins
REACT_APP_COGNITO_ANALYST_GROUP=Analysts

# API Configuration
# Timeout for API requests in milliseconds
REACT_APP_API_TIMEOUT=30000
# Maximum retry attempts for failed API requests
REACT_APP_API_MAX_RETRIES=3