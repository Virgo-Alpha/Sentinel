# Sentinel Configuration Environment Variables
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_PROFILE=default

# Environment
ENVIRONMENT=dev
PROJECT_NAME=sentinel

# DynamoDB Tables (will be prefixed with environment)
ARTICLES_TABLE=sentinel-articles
COMMENTS_TABLE=sentinel-comments
MEMORY_TABLE=sentinel-memory

# S3 Buckets (will be prefixed with environment and account)
CONTENT_BUCKET=sentinel-content
ARTIFACTS_BUCKET=sentinel-artifacts
TRACES_BUCKET=sentinel-traces

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=
OPENSEARCH_INDEX_ARTICLES=sentinel-articles
OPENSEARCH_INDEX_VECTORS=sentinel-vectors

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1

# Agent Configuration (populated after deployment)
INGESTOR_AGENT_ID=
ANALYST_AGENT_ID=

# Step Functions
INGESTION_STATE_MACHINE_ARN=

# API Gateway
API_GATEWAY_URL=

# SES Configuration
SES_SENDER_EMAIL=noreply@sentinel.com
SES_REPLY_TO_EMAIL=security-team@sentinel.com

# Notification Recipients (comma-separated)
ESCALATION_EMAILS=bensonkingori96@gmail.com,security-lead@yourdomain.com
DIGEST_EMAILS=bensonkingori96@gmail.com,analysts@yourdomain.com
ALERT_EMAILS=bensonkingori96@gmail.com,security-alerts@yourdomain.com

# Processing Configuration
MAX_CONCURRENT_FEEDS=5
MAX_ARTICLES_PER_FETCH=50
CONTENT_RETENTION_DAYS=365

# Thresholds
RELEVANCE_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.85
CONFIDENCE_THRESHOLD=0.8

# Rate Limiting
MAX_DAILY_LLM_CALLS=10000
MAX_MONTHLY_COST_USD=1000.0

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2.0

# Logging
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true

# Feature Flags
ENABLE_AGENTS=false
ENABLE_AMPLIFY=false
ENABLE_OPENSEARCH=false
ENABLE_SEMANTIC_DEDUP=true
ENABLE_LLM_RELEVANCE=true
ENABLE_AUTO_PUBLISH=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_KEYWORD_ANALYSIS=true

# Configuration Paths
FEEDS_CONFIG_PATH=config/feeds.yaml
KEYWORDS_CONFIG_PATH=config/keywords.yaml